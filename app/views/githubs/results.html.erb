<div class="container dashboard_container">
  <div class="results_per_page">
    <label>Page Results: </label>
    <select name="limit" id="results_limit">
      <option id="option_25" value="25" >25</option>
      <option id="option_50" value="50">50</option>
      <option id="option_75" value="75">75</option>
    </select>
  </div>
  <div class="col-sm-12 dash_right">
    <div class="repos">
      <div class="row"> 
      <% @repos.each do |repo, repo_info|%>
        <div class="repo col-sm-4">
          <img src="<%= repo_info['avatar_url'] %>" alt="">
          <a href="<%= repo_info['html_url'] %>">
            <div class="repo_cover">
              <div class="repo_title col-xs-12"><%= repo_info['full_name'] %></div>
              <div class="repo_details col-xs-12">
                <div class="forks col-xs-4">
                  <span class="octicon octicon-repo-forked"></span>
                  <div class="number"><%= repo_info['forks'] %></div>
                </div>
                <div class="stars col-xs-4 col-xs-offset-4">
                  <span class="octicon octicon-star"></span>
                  <div class="number"><%= repo_info['watchers'] %></div>
                </div>
              </div>
              <div class="repo_description col-xs-12"><%= repo_info['description'] %></div>
            </div>
          </a>
        </div>
      <% end #end each %>
      </div>
    </div>
  </div>
</div>